{
    "version": 2,
    "buildCommand": "cd client-vite && npm install && npm run build",
    "outputDirectory": "client-vite/dist",
    "rewrites": [
        {
            "source": "/api/movies/:id",
            "destination": "/api/movies/[id]"
        },
        {
            "source": "/api/movies",
            "destination": "/api/movies"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}