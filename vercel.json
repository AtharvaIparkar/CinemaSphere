{
    "version": 2,
    "builds": [
        {
            "src": "client-vite/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        },
        {
            "src": "api/**/*.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": "/api/movies/([^/]+)",
            "dest": "/api/movies/[id].js"
        },
        {
            "src": "/api/movies",
            "dest": "/api/movies.js"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/client-vite/dist/assets/$1"
        },
        {
            "src": "/(.*\\.(js|css|ico|png|jpg|svg|woff|woff2))",
            "dest": "/client-vite/dist/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/client-vite/dist/index.html"
        }
    ]
}